<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0"
            prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="md.leonis.ps.editor.view.TrackPaneController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <top>
        <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" top="5.0"/>
            </padding>
            <CheckBox fx:id="clearLogsCheckBox" text="Auto clear logs" selected="true"/>
            <Button fx:id="refreshButton" onAction="#refreshButtonClick" text="Refresh" disable="true"/>
            <CheckBox fx:id="autoRefreshCheckBox" text="Auto Refresh" selected="true"
                      onAction="#autoRefreshCheckBoxClick"/>
        </HBox>
    </top>

    <center>
        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
